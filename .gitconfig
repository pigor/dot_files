[user]
  name = Paulo Igor
  email = piagodinho@gmail.com
[alias]
  co=checkout
  br=branch
  ci=commit
  st=status
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  who = shortlog -s --
[core]
  editor = vim
  excludesfile = /home/pigor/.gitignore
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[push]
  default = matching
[pull]
	rebase = true
[init]
	defaultBranch = main
